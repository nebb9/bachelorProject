@model ProjectManagementApp.Models.Account.UserLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="panel panel-container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "login-form" }))
            {
        <div class="panel-heading">Log in</div>

        <div class="panel-body">
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @id = "login-username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "login-password", @type = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" id="submit-login-form" class="btn btn-primary">Submit</button>
            </div>
        </div>
    }
</div>






